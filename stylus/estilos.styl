@import "nib"
@import "normalize.styl"
@import "fonts.styl"

/*animacion(parametro)
	-webkit-animation parametro
	-moz-animation parametro
	-ms-animation parametro
	-o-animation parametro
	animation parametro*/

gris_oscuro = #333
gris_claro = #818181
gris_claro2 = #F0F0F0
fuccia = #BD255B
a
	text-decoration none
body 
	font-family: 'Varela Round', sans-serif;
	font-size 16px
figure
	margin 0
img
	vertical-align top
ul
	margin 0
	padding 0
//buttons
.button-menu
	position absolute
	top 50%
	margin-top -8px
	left .5em
	color gris_oscuro
	font-size 1.3em
	
//oocss
.action
	color white
	margin-right .5em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
		font-size 1.6em
.actions
	position absolute
	bottom 0
	left 0
	right 0
	font-size 1.2em
	background rgba(black,.3)
.author
	color gris_claro
.border-bottom
	border-bottom 1px solid gris_claro
.center-block
	margin 0 auto
.center-text
	text-align center
.container
	padding 1.4rem
	font-size 0
	text-align center
.header
	height 3.5em
	//a  
	//	display none
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center
.icon-close
	font-size 1.2em
	top .5em
	position absolute
	right .5em
	color gris_claro
	font-family: 'Varela Round', sans-serif
.input
	border 1px solid gris_claro
	height 2.3em
	border-radius 5px
	padding 0 1em 0 2em
	
.left
	float left
.logo
	display none
	padding 1.3em 0
	overflow hidden
	background white
.menu
.playlist
	display none
.name
	color gris_oscuro
.playlist
	width 22em
	padding 0 2em
	border-left 1px solid gris_claro
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size 14px
.relative
	position relative
.padding
	padding 1em	
.padding-tb
	padding 1em 0
.playing
	&.small
		width 20em
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		top -5px
		position absolute
	.min
		left 0	
	.max
		right 0
	.total
		height 5px
		border-radius 5px
		background gris_claro
		width 75%
		margin 0 auto
	.state
		height 5px
		border-radius 5px
		background fuccia
		position relative
		width 30%
		animation 30s state infinite linear
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		width 10px
		position absolute
		right 0
		top -2px
@keyframes state
	0%
		width 0
	100% 
		width 100%
.right
	float right
.right-text
	text-align right	
.round
	border-radius 50%
	overflow hidden
.search
	margin-right .5em
.search-icon
	position absolute
	top .7em
	left .5em
	color gris_claro
.song
	text-align left
	width 8em
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	&:nth-child(even)
		margin-right 0
	p
		margin .5em 0
.wrap
	width 1000px
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto	
			
@media screen and (min-width:1000px)
	body
		background gris_claro2
	.avatar
		width 38px
		height 38px
	.button-menu
		display none
	.header
		border none
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		display block
	.menu
		display block
		background gris_claro2
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				padding 1em
				display block
				border-top 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
	.music
		width 32.5em
		float left
		.description
			display none
	.playlist
		display block

	.playing
		padding-top 1.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.username
		color gris_claro
		position relative
		top 7px
		margin-left .5em
		&:after
			content ""
			border-top 7px solid gris_claro
			border-left 7px solid transparent
			border-right 8px solid transparent
			display inline-block
			margin-left .3em